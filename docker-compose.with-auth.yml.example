services:
  traefik:
    image: traefik:2.11
    container_name: actual-auto-categorise-traefik
    command:
      - --providers.docker=true
      - --providers.docker.exposedbydefault=false
      - --entrypoints.web.address=:80
    ports:
      - '${HTTP_PORT:-3000}:80'
    networks:
      - categorise
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    depends_on:
      - actual-auto-categorise
      - actual-auth-proxy

  actual-auth-proxy:
    image: ${AUTH_FORWARD_IMAGE:-ghcr.io/rjlee/actual-auto-auth:latest}
    pull_policy: always
    container_name: actual-auto-categorise-auth
    environment:
      ACTUAL_PASSWORD: ${ACTUAL_PASSWORD:?ACTUAL_PASSWORD must be set}
      SESSION_SECRET: ${SESSION_SECRET:-}
      AUTH_APP_NAME: ${AUTH_APP_NAME:-Actual Auto Categorise}
      AUTH_COOKIE_NAME: ${AUTH_COOKIE_NAME:-categorise-auth}
      PORT: 4000
    networks:
      - categorise
    labels:
      - traefik.enable=true
      - traefik.http.routers.categorise-auth.rule=PathPrefix(`/auth`)
      - traefik.http.routers.categorise-auth.entrypoints=web
      - traefik.http.routers.categorise-auth.priority=100
      - traefik.http.services.categorise-auth.loadbalancer.server.port=4000
      - traefik.http.middlewares.categorise-forward.forwardauth.address=http://actual-auto-categorise-auth:4000/check
      - traefik.http.middlewares.categorise-forward.forwardauth.trustForwardHeader=true
      - traefik.http.middlewares.categorise-forward.forwardauth.authResponseHeaders=Set-Cookie
      - 'traefik.http.middlewares.categorise-forward.forwardauth.authRequestHeaders=X-Actual-App-Name,X-Actual-Cookie-Name,X-Forwarded-Host,X-Forwarded-Proto,Cookie'

  actual-auto-categorise:
    image: ghcr.io/rjlee/actual-auto-categorise:${ACTUAL_IMAGE_TAG:-latest}
    container_name: actual-auto-categorise
    env_file:
      - ./.env
    command: ['--mode', 'daemon', '--ui', '--http-port', '${HTTP_PORT:-3000}']
    restart: unless-stopped
    depends_on:
      - actual-auth-proxy
    networks:
      - categorise
    volumes:
      - type: bind
        source: ./data
        target: /app/data
    logging:
      driver: json-file
      options:
        max-size: '10m'
        max-file: '3'
    labels:
      - traefik.enable=true
      - traefik.http.routers.categorise.rule=PathPrefix(`/`) && !PathPrefix(`/auth`)
      - traefik.http.routers.categorise.entrypoints=web
      - traefik.http.routers.categorise.middlewares=categorise-chain@docker
      - traefik.http.services.categorise.loadbalancer.server.port=${HTTP_PORT:-3000}
      - traefik.http.middlewares.categorise-headers.headers.customrequestheaders.X-Actual-App-Name=${AUTH_APP_NAME:-Actual Auto Categorise}
      - traefik.http.middlewares.categorise-headers.headers.customrequestheaders.X-Actual-Cookie-Name=${AUTH_COOKIE_NAME:-categorise-auth}
      - traefik.http.middlewares.categorise-chain.chain.middlewares=categorise-headers@docker,categorise-forward@docker

networks:
  categorise:
    driver: bridge
