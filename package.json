{
  "name": "actual-auto-categorise",
  "private": true,
  "version": "1.1.0",
  "description": "Transaction auto-classifier for Actual Budget using a KNN+Embed model",
  "main": "src/train.js",
  "scripts": {
    "start": "node src/index.js",
    "train": "node src/index.js --mode train",
    "classify": "node src/index.js --mode classify",
    "daemon": "node src/index.js --mode daemon",
    "test": "jest --runInBand --passWithNoTests",
    "test:coverage": "JEST_COVERAGE=true npm test",
    "test:watch": "jest --watch",
    "lint": "eslint --max-warnings=0 . && npm run lint:ejs",
    "lint:fix": "eslint --fix .",
    "lint:ejs": "npx --no-install ejs-lint \"src/views/**/*.ejs\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@actual-app/api": "^26.1.0",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "@tensorflow/tfjs-node-gpu": "^4.22.0",
    "@xenova/transformers": "^2.2.0",
    "cookie-session": "^2.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "ejs-lint": "^2.0.1",
    "express": "^5.2.1",
    "hnswlib-node": "^3.0.0",
    "i18next": "^25.8.0",
    "js-yaml": "^4.1.1",
    "node-cron": "^4.2.1",
    "pino": "^10.3.0",
    "yargs": "^18.0.0"
  },
  "overrides": {
    "@tensorflow/tfjs-core": "^4.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/views/**/*.ejs": [
      "npx --no-install ejs-lint"
    ]
  }
}
